<link rel="stylesheet" href="/css/header.css">
<header>
  <div class="logo">
    <a href="/">Codeial</a>
  </div>
  <ul>
    <% if (locals.user) { %>
      <li><%= user.name %></li>
      <li><%= user.email %></li>
      <li><a href="/users/profile" class="profile">Profile</a></li>
      <li><a href="/users/sign-out" class="signout">Sign Out</a></li>
    <% } else { %>
      <li><a href="/users/sign-in">Sign In</a></li>
      <li><a href="/users/sign-up">Sign Up</a></li>
    <% } %>
  </ul>
</header> 